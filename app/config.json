{
  "transmission_interval_minutes": 15,
  "sampling_interval_seconds": 30,
  "averaging_window_minutes": 5,
  "sensors": {
    "thp_bme280": {
      "enabled": true,
      "port": 1,
      "address": 118,
      "measurements": ["temperature", "humidity", "pressure"]
    },
    "air_pollution_sps30": {
      "enabled": true,
      "port": 1,
      "address": 105,
      "warmup_time": 5,
      "measurements": ["pm1", "pm2_5", "pm10"]
    },
    "uv_ltr390": {
      "enabled": true,
      "measurements": ["uv", "lux"]
    },
    "wind_sensor": {
      "enabled": true,
      "adc_channel": 0,
      "pulse_pin": 17,
      "speed_coefficient": 2.4,
      "measurements": ["speed", "direction"]
    },
    "rain_sensor": {
      "enabled": true,
      "pin": 27,
      "mm_per_tip": 0.2794,
      "measurements": ["rain"]
    }
  }
}
